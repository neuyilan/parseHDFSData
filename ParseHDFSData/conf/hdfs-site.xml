<!-- Put site-specific property overrides in this file. -->

<configuration>
<property>
		<name>dfs.datanode.handler.count</name>
		<value>5</value>
		<description>The number of server threads for the datanode.</description>
	</property>
	
	<property>
		<name>dfs.namenode.handler.count</name>
		<value>5</value>
		<description>The number of server threads for the namenode.</description>
	</property>
	
<property>  
<name>dfs.replication</name>  
<value>1</value>  
</property>

<property> 
<name>dfs.datanode.data.dir</name>  
<value>/opt/qhl/cluster/ccindex-1.1.2/tmp-1.1.2/hdfs/data</value>  
</property>

<property>  
<name>dfs.namenode.name.dir</name>  
<value>/opt/qhl/cluster/ccindex-1.1.2/tmp-1.1.2/hdfs/name</value>  
</property>

<property>
		<name>dfs.datanode.max.xcievers</name>
		<value>8192</value>
	</property>
	<!-- 配置 namenode和secondary namenode，这里不在同一台机器上面 -->
	<property>
		<name>dfs.http.address</name>
		<value>data7:50070</value>
		<description>The address and the base port where the dfs namenode web ui will listen on.If the port is 0 then the server will start on a free port.</description>
	</property>
	<property>
		<name>dfs.namenode.secondary.http-address</name>
		<value>data7:50090</value>
	</property>
	<!-- 配置 namenode和secondary namenode，这里不在同一台机器上面 -->
	
</configuration>
